<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vamsi.WeatherStatus.MainActivity"
    tools:deviceIds="wear_round">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_round"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editext_cityname"
        android:hint="Search Query"
        android:layout_below="@+id/text"
        android:layout_centerHorizontal="true"
        android:textSize="18sp" />

    <Button
        android:text="Search"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:onClick="weather"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/editext_cityname"
        android:layout_toEndOf="@+id/editext_cityname" />

    <TextView
        android:textAlignment="center"
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:id="@+id/textView_display"
        android:layout_marginLeft="1dp"
        android:layout_alignTop="@+id/button2"
        android:layout_toStartOf="@+id/text" />


</RelativeLayout>
